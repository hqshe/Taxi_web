@model RegisteredPassenger
<link rel="stylesheet" type="text/css" href="~/css/styles.css">
<div class="budyak">

<div class="row">
    <div class="col-md-4">
        <h1 class="register">
         Register
        </h1>
        <form id="registerForm" method="post">
            <h2>Create a new account</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-dark"></div>
            <div class="form-floating">
                <input asp-for="Email" class="form-control" aria-required="true" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-dark"></span>
            </div>
            <div class="form-floating">
                <input asp-for="FullName" class="form-control" aria-required="true" />
                <label asp-for="FullName"></label>
                <span asp-validation-for="FullName" class="text-dark"></span>
            </div>
            <div class="form-floating">
                <input asp-for="PhoneNumber" class="form-control" aria-required="true" />
                <label asp-for="PhoneNumber"></label>
                <span asp-validation-for="PhoneNumber" class="text-dark"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" class="form-control" type="password" aria-required="true" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password"></span>
            </div>   
            <button class="registerSubmit w-100 btn btn-lg btn-primary" type="submit">Register</button>
        </form>
    </div>
</div>
</div>